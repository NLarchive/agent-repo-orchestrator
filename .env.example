# Kubernetes Configuration
KUBE_CONFIG_PATH=~/.kube/config
KUBE_NAMESPACE=plugins
KUBE_CONTEXT=kind-orchestrator-dev

# Database (SQLite)
DB_PATH=./orchestrator/data/orchestrator.db

# API Server
API_PORT=3000
API_HOST=0.0.0.0

# Logging
LOG_LEVEL=info

# Plugins
PLUGIN_IMAGE_REGISTRY=ghcr.io/example
PLUGIN_PORT_RANGE_START=8080
PLUGIN_PORT_RANGE_END=8100

# Testing
TEST_CLUSTER_NAME=orchestrator-dev
TEST_CLUSTER_TIMEOUT=60000
NODE_ENV=development

# ===== SECURITY: REQUIRED CREDENTIALS =====
# These MUST be set before running the orchestrator
# DO NOT use default/example values in production!

# MinIO Credentials (REQUIRED)
MINIO_ACCESS_KEY=your-secure-access-key-here
MINIO_SECRET_KEY=your-secure-secret-key-here
MINIO_HOST=localhost
MINIO_PORT=9000
MINIO_BUCKET=orchestrator

# PostgreSQL Credentials (if using PostgreSQL plugin)
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=orchestrator_db
POSTGRES_USER=orchestrator_user
POSTGRES_PASSWORD=change-this-password

# NATS Configuration
NATS_URL=nats://localhost:4222

# Pathway Configuration
PATHWAY_URL=http://localhost:8000

