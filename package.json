{
  "name": "agent-repo-orchestrator",
  "version": "0.1.0",
  "description": "Kubernetes-native plugin orchestrator with workflow engine",
  "main": "orchestrator/index.js",
  "scripts": {
    "start": "node orchestrator/index.js",
    "dev": "nodemon orchestrator/index.js",
    "test": "jest --coverage --detectOpenHandles",
    "test:unit": "jest orchestrator/tests/unit --coverage",
    "test:integration": "jest orchestrator/tests/integration --maxWorkers=1",
    "test:watch": "jest --watch",
    "lint": "eslint orchestrator/**/*.js",
    "migrate": "node orchestrator/db/migrate.js",
    "report": "node workflows/fraud-detection-workflow/scripts/generate-test-report.js --input workflows/fraud-detection-workflow --output workflows/fraud-detection-workflow/reports --format html",
    "report:pdf": "node workflows/fraud-detection-workflow/scripts/generate-test-report.js --input workflows/fraud-detection-workflow --output workflows/fraud-detection-workflow/reports --format pdf",
    "report:both": "node workflows/fraud-detection-workflow/scripts/generate-test-report.js --input workflows/fraud-detection-workflow --output workflows/fraud-detection-workflow/reports --format both"
  },
  "keywords": [
    "kubernetes",
    "orchestrator",
    "plugin",
    "workflow",
    "container"
  ],
  "author": "Nicolas Ivan Larenas Bustamante",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/agent-repo-orchestrator.git"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.445.0",
    "@aws-sdk/s3-request-presigner": "^3.445.0",
    "@kubernetes/client-node": "^0.20.0",
    "axios": "^1.6.2",
    "better-sqlite3": "^9.2.2",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "js-yaml": "^4.1.0",
    "jsonwebtoken": "^9.0.2",
    "nats": "^2.17.1",
    "postgres": "^3.4.4",
    "prom-client": "^15.1.3",
    "uuid": "^9.0.1",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "eslint": "^8.55.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "supertest": "^6.3.3"
  },
  "jest": {
    "testEnvironment": "node",
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/tests/"
    ],
    "testMatch": [
      "**/__tests__/**/*.js",
      "**/?(*.)+(spec|test).js"
    ],
    "collectCoverageFrom": [
      "orchestrator/**/*.js",
      "!orchestrator/tests/**",
      "!orchestrator/index.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 60,
        "functions": 70,
        "lines": 70,
        "statements": 70
      }
    }
  }
}
